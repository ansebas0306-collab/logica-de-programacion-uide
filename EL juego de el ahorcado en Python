def ver_progreso(palabras_secretas, letras_ adivinadas):
     ¨¨¨Caso de uso: Ver Progreso¨¨¨
     progreso=¨¨
     for letras in palabra_secreta:
          if letras in letras_adivinadas:
             progreso += letras +¨¨
         else:
             progreso += ¨_¨
     return progreso
def
